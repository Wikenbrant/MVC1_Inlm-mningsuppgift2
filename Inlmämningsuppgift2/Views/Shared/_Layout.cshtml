@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inlmämningsuppgift2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body style="background-image: url(/img/@ViewBag.BackgroundImage);background-repeat: no-repeat;background-size: cover;">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggler navbar-dark bg-dark box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Menu">Menu</a>
                    </li>
                </ul>
            </div>
            <div id="cart">
                <vc:cart-detail></vc:cart-detail>
            </div>
            <partial name="_LoginPartial"/>
        </div>
</nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-light bg-dark p-3">
    <div class="container">
        <div class="row">
            <div class="offset-3 col-3">
                <ul class="list-unstyled">
                    <li><h5>About us</h5></li>
                    <li><p>The best pizza in the world!</p></li>
                    <li><ul class="list-unstyled list-inline">
                        <li class="list-inline-item m-1"><a href="#"><i class="fa fa-twitter text-white"></i></a></li>
                        <li class="list-inline-item m-1"><a href="#"><i class="fa fa-facebook-f text-white"></i></a></li>
                        <li class="list-inline-item m-1"><a href="#"><i class="fa fa-instagram text-white"></i></a></li>
                    </ul></li>
                </ul>
            </div>
            <div class="col-3">
                <div class="container">
                    <div class="row">
                        <h5>Have a question?</h5>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-map-marker text-white"></i>
                        </div>
                        <div class="col-2">
                            <span class="text-white"> Tomtebodavägen 3A 171 65 Solna</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-phone text-white"></i>
                        </div>
                        <div class="col-2">
                            +46 000 000 00
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-envelope text-white"></i>
                        </div>
                        <div class="col-2">
                            info@TomasosContext.com
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <p class="text-center">Copyright &copy;2020 -  <span class="text-warning">Tomasos</span></p>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.unobtrusive-ajax/3.2.5/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
