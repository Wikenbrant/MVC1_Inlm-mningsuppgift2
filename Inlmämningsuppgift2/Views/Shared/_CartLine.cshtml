@model CartLine

<div class="row border-bottom p-2">
    <div class="container">
        <input type="hidden" asp-for="FoodItem.FoodItemId"/>
        <div class="row">
            <div class="col-2 text-white">
                <label asp-for="FoodItem.Name"></label>
            </div>
            <div class="col-10 text-white">
                @Model.FoodItem.Name
            </div>
        </div>
        <div class="row">
            <div class="col-2 text-white">
                <label asp-for="FoodItem.Price"></label>
            </div>
            <div class="col-10 text-white">
                <span>@Model.FoodItem.Price.ToString("C")</span>
            </div>
        </div>

        <div class="row">
            <div class="col-2 text-white">
                <label asp-for="Quantity"></label>
            </div>
            <div class="col-10">
                <div class="container">
                    <div class="input-group">
                        <div class="col-2 input-group-prepend text-white">
                            <a href="#" class="btn" onclick="AjaxPost('@(Url.Action("DeleteOneItem", "Cart"))', @Model.FoodItem.FoodItemId)">
                                <i class="fa fa-minus text-white"></i>
                            </a>
                        </div>
                        <div class="col-4 text-white">
                            <input id="quantityInput" onchange="AjaxPost('@(Url.Action("AddItem", "Cart"))', @Model.FoodItem.FoodItemId, ($(this).val()))" class="form-control" asp-for="Quantity" />
                        </div>
                        <div class="col-4 input-group-append text-white">
                            <a href="#" class="btn" onclick="AjaxPost('@(Url.Action("AddOneItem", "Cart"))', @Model.FoodItem.FoodItemId)">
                                <i class="fa fa-plus text-white"></i>
                            </a>
                            <a href="#" class="btn btn-danger" onclick="AjaxPost('@(Url.Action("DeleteItem", "Cart"))', @Model.FoodItem.FoodItemId)">
                                <i class="fa fa-trash text-white"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>