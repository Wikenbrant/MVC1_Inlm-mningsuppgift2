@model EditFoodItemViewModel
<!DOCTYPE html>

<div class="row">
    <div class="col-md-4">
        <form class="text-white" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodItem.FoodItemId" />
            <div class="form-group">
                <label asp-for="FoodItem.Name"></label>
                <input asp-for="FoodItem.Name" class="form-control" />
                <span asp-validation-for="FoodItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Description"></label>
                <input asp-for="FoodItem.Description" class="form-control" />
                <span asp-validation-for="FoodItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Price"></label>
                <input asp-for="FoodItem.Price" class="form-control" />
                <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedFoodItemTypeId"></label>
                <select asp-for="SelectedFoodItemTypeId" class="form-control">
                    @foreach (var type in Model.AvailableFoodItemType)
                    {
                        <option selected="@type.Selected" value="@type.Value">@type.Text</option>
                    }
                </select>
                <span asp-validation-for="FoodItem.FoodItemTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedProductsIds"></label>
                <select multiple="multiple" asp-for="SelectedProductsIds" class="form-control MultiSelect" asp-items="Model.AvailableProducts" size="@Model.AvailableProducts.Count()"></select>
                <span asp-validation-for="SelectedProductsIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

